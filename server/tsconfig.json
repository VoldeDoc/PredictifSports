{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "jsx": "preserve",
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": ["src/**/*", "server.ts"],
    "exclude": ["node_modules", "dist", "client"],
    "lib": ["es6"]
}